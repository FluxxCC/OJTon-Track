{
  "version": 2,
  "builds": [
    { "src": "api/server.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/api/:path*", "destination": "/api/server" },
    { "source": "/config.js", "destination": "/api/server" }
  ],
  "headers": [
    { "source": "/manifest.json", "headers": [ { "key": "Cache-Control", "value": "public, max-age=3600" } ] },
    { "source": "/service-worker.js", "headers": [ { "key": "Cache-Control", "value": "no-cache" } ] },
    { "source": "/offline.html", "headers": [ { "key": "Cache-Control", "value": "public, max-age=3600" } ] },
    {
      "source": "/manifest.json",
      "headers": [ { "key": "Content-Type", "value": "application/manifest+json" } ]
    },
    {
      "source": "/service-worker.js",
      "headers": [ { "key": "Content-Type", "value": "application/javascript" } ]
    },
    {
      "source": "/offline.html",
      "headers": [ { "key": "Content-Type", "value": "text/html; charset=utf-8" } ]
    }
  ]
}
